 <!DOCTYPE html>

  <html>
    <head>
      <title>StoryShare <%= " | #{@page_title } " if @page_title %></title>
<% @page_title = "Share Story" %>
 <%= stylesheet_link_tag('animate.min', :media => 'all') %>
