                    <div class="col-md-12">
                        <div class="card">
                           
                           <%= yield%>
                        </div>
                    </div>

                                  </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="#">
                                Home
                            </a>
                        </li>
                      
                    </ul>
                </nav>
