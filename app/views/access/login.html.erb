<% @page_title = "Login" %>

  <br/>
	<div class="row">
  </div>
  <div class="page-content container after">
  <%= form_tag(:action => 'attempt_login') do %>

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-wrapper">
              <div class="box">
                  <div class="content-wrap">
                      <h6>Sign In</h6>
                      <div class="social">
                              <a class="face_login" href="#">
                                  <span class="face_icon">
                                      <%= image_tag('facebook.png') %>
                                  </span>
                                  <span class="text">Sign in with Facebook</span>
                              </a>
                              <div class="division">
                                  <hr class="left">
                                  <span>or</span>
                                  <hr class="right">
                              </div>
                          </div>
                         	
		<%= text_field_tag "username", (:username), :class => 'form-control '%>
	                    
	<%= password_field_tag "password", (:password), :class => 'form-control' %>
     <div class="action">

     <%= submit_tag "login",:class => 'btn btn-primary signup' %>                    
                      </div>  
                        <% end %>
             
                  </div>
              </div>

              <div class="already">
                  <p>Don't have an account yet?</p>
                  <a href="signup.html">Sign Up</a>
              </div>
          </div>
      </div>
    </div>
  </div>
