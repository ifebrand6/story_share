<div class=" index">
<h2>Pages</h2>
 <%= link_to("<< Back to index", {:controller => 'stories', :action => 'index',:story_id => @story.id}, :class => 'back-link') %>
<br/>
<%= link_to("Add New page ", {:action => 'new',:story_id => @story.id}, :class => 'action new') %>

<table class="listing" summary="page list">
<tr class="header">
<th>&nbsp;</th>
<th>STORY </th>
<th>Page</th>
<th>Permalink</th>
<th>Visible</th>
<th>Sections</th>
<th>Actions</th>
</tr>


	<% @pages.each do |page| %>
<tr>
	<td><%= page.position %></td>
	<td><%= page.story.name if page.story %></td>
	<td><%= page.name %></td>
	<td><%= page.permalink %></td>
	<td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
	<td class="center"><%= page.sections.size %></td>
	
		<td class="center"><%= page.created_at %></td>
<td class="actions">
	
	<%= link_to("View Sections", {:controller => 'sections',:page_id => page.id}, :class => 'action edit') %>
	<%= link_to("Show", {:action => 'show',:id => page.id,:story_id => @story.id}, :class => 'action show') %>
	<%= link_to("Edit", {:action => 'edit',:id => page.id,:story_id => @story.id}, :class => 'action edit') %>
	<%= link_to("Delete", {:action => 'delete',:id => page.id,:story_id => @story.id}, :class => 'action delete') %>
	</td>
</tr>
<% end %>
	</table>
</div>
